<?xml version="1.0" encoding="UTF-8"?>
<web-app
        metadata-complete="true"
        version="4.0"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://xmlns.jcp.org/xml/ns/javaee">
  <!-- 一、注册 -->
  <servlet>
    <servlet-name>DownLoadFile</servlet-name>
    <servlet-class>com.bmft.DownLoadFile</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>CAPTCHA</servlet-name>
    <servlet-class>com.bmft.CAPTCHA</servlet-class>
  </servlet>
  <!-- 二、映射 -->
  <servlet-mapping>
    <servlet-name>DownLoadFile</servlet-name>
    <url-pattern>/DownLoadFile</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CAPTCHA</servlet-name>
    <url-pattern>/CAPTCHA</url-pattern>
  </servlet-mapping>
  <!-- 三、注册和映射不用分开 -->
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.bmft.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- CAPTCHA02  带干扰线-->
  <servlet>
    <servlet-name>CAPTCHA02</servlet-name>
    <servlet-class>com.bmft.CAPTCHA02</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CAPTCHA02</servlet-name>
    <url-pattern>/CAPTCHA02</url-pattern>
  </servlet-mapping>
</web-app>