<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <!--全局字符过滤-->
  <filter>
    <filter-name>CharacterFilter</filter-name>
    <filter-class>com.mbft.smbms.filter.global.CharacterFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CharacterFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!--设置jsp文件夹下的登录login过滤-->
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.mbft.smbms.filter.jsp.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/jsp/*</url-pattern>
  </filter-mapping>
  <!--设置welcome页-->
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
<!--登录login.do请求-->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.mbft.smbms.servlet.user.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <!--点击退出跳转的页面-->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.mbft.smbms.servlet.user.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/jsp/logout.do</url-pattern>
  </servlet-mapping>
  <!--/jsp/user.do请求-->
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.mbft.smbms.servlet.user.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/jsp/user.do</url-pattern>
  </servlet-mapping>
  <session-config>
    <!--设置超时时间为30分钟-->
    <session-timeout>30</session-timeout>
  </session-config>
  <!--jsp/bill.do请求-->
  <servlet>
    <servlet-name>BillServlet</servlet-name>
    <servlet-class>com.mbft.smbms.servlet.bill.BillServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BillServlet</servlet-name>
    <url-pattern>/jsp/bill.do</url-pattern>
  </servlet-mapping>
<!--最后的供应商-->
  <servlet>
    <servlet-name>ProviderServlet</servlet-name>
    <servlet-class>com.mbft.smbms.servlet.provider.ProviderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProviderServlet</servlet-name>
    <url-pattern>/jsp/provider.do</url-pattern>
  </servlet-mapping>
</web-app>